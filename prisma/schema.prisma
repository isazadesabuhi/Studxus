// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth"]  // Only the schema you want
}

// ← Add your User model here ↓

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()"))
  email         String    @unique
  created_at    DateTime  @default(now())
  
  // Ignore fields you don't want
  encrypted_password String? @ignore
  confirmation_token String? @ignore
  
  @@map("users")
  @@schema("auth")
}